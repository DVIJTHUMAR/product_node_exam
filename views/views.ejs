<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Electronic Product View</title>

    <link rel="stylesheet" href="style.css">

</head>

<body>

    <div class="text-center">
        <div class="text-warning bg-secondary p-2">
        <h4>Electronic Product Form</h4>
      </div>

        <table class="table ">
            <thead>
                <tr>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">#</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Images</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Product Name</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Price</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Description</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Brand</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Color</th>
                    <th scope="col" class="border border-end border-dark bg-danger-subtle">Buttons</th>
                </tr>
                </tr>
            </thead>
            <tbody>
                <% ElecProducts.forEach(function(elProduct,index){ %>
                    <tr>
                        <th class="border border-end border-dark" scope="row">
                            <%= index+1 %>
                        </th>
                        <td class="border border-end border-dark">
                            <img src="./<%= elProduct.proImage %>" alt="image">
                        </td>
                        <td class="border border-end border-dark">
                            <%= elProduct.Pro_name %>
                        </td>
                        <td class="border border-end border-dark">
                            <%= elProduct.price %>
                        </td>
                        <td class="border border-end border-dark">
                            <%= elProduct.description %>
                        </td>
                        <td class="border border-end border-dark">
                            <%= elProduct.brand %>
                        </td>
                        <td class="border border-end border-dark">
                            <%= elProduct.color %>
                        </td>
                        <td class="border border-end border-dark">
                            <button class="btn btn-primary">
                                <a href="/editproduct/<%= elProduct.id %>" class="text-light">Edit</a>
                            </button>
                            ||
                            <button class="btn btn-danger">
                                <a href="/deleteproduct/<%= elProduct.id %>" class="text-light">Delete</a>
                            </button>
                        </td>
                    </tr>
                    <% }); %>

            </tbody>
        </table>
        <button class="btn btn-primary">
            <a href="/" class="text-light">Add Products</a>
        </button>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>